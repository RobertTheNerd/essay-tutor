{
  "name": "frontend",
  "description": "React frontend for Essay Tutor hierarchical evaluation platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:api": "npm run dev --prefix ../server",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "test:api": "node tests/api/test-api.js",
    "test:api-structure": "node tests/api/check-api-structure.js",
    "test:e2e": "node tests/puppeteer/test-evaluation-workflow.js",
    "test:e2e-debug": "node tests/puppeteer/debug-evaluation.js",
    "test:quick": "node tests/puppeteer/quick-test.js",
    "test:ux": "node tests/puppeteer/test-enhanced-ux.js",
    "test:ux-quick": "node tests/puppeteer/quick-ux-test.js",
    "test:verify": "node tests/puppeteer/final-verification.js",
    "test:print-debug": "node tests/debug-print.cjs",
    "test:print": "node tests/print-test.cjs",
    "test:create-sample": "node tests/create-sample-evaluation.cjs",
    "test:force-print": "node tests/force-print-debug.cjs",
    "test:spacing-debug": "node tests/comprehensive-spacing-debug.cjs",
    "test:ultimate-fix": "node tests/test-ultimate-print-fix.cjs"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.81.5",
    "@types/multer": "^1.4.13",
    "@vercel/node": "^5.3.0",
    "autoprefixer": "^10.4.21",
    "formidable": "^3.5.4",
    "multer": "^2.0.1",
    "openai": "^5.8.2",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/express": "^5.0.3",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "express": "^5.1.0",
    "globals": "^16.2.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.14.0",
    "tailwindcss": "^3.4.16",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0"
  }
}
